
<div style="text-align: center;"> <h3 class="shadow p-3 mb-5 bg-body rounded" style="font-weight: bold;"> HOLA {{usuario}}</h3><a href="/admin/login/logout" class="btn btn-dark" style="margin-bottom: 15px;" >Cerrar sesion<i class="fas fa-sing-out-alt"></i></a></div>

<div class="row">
    
</div>

<div class="row">
    <div class="col-5" style="margin-top: 9px ;">
        <h2 style="text-align: center ;">Listado de novedades</h2>
    </div>
    <div class="col-3 text-end">
        <a href="/admin/novedades/agregar" class="btn btn-dark"><i class="fas fa-plus"></i> Nuevo</a>
    </div>
    <div class="col-3" style="padding: 10px;">
      <form class="d-flex" action="/admin/novedades" role="search">
      <input class="form-control me-2" type="search" aria-label="Search" placeholder="Buscar" name="q" {{#if q}} value={{q}} {{/if}} >
      <button class="btn btn-outline-dark" style="margin-right:10px;" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
      </form>

    </div>
    <div style="padding: 50px ;">
    <table class="table table-dark table-hover" >
    <thead>
    <tr class="table-dark">
      <th scope="col">#</th>
      <th scope="col" class="text-center">Titulo</th>
      <th scope="col">Imagen</th>
      <th scope="col" class="text-end">Acciones</th>
    </tr>
  </thead>
  <tbody>
    {{#each novedades}}
     <tr> 
      <th scope="row">{{id}}</th>
      <td class="text-center">{{titulo}}</td>
      <td>{{{imagen}}}</td>
      <td class="text-end"><a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fas fa-pencil-alt"></i> </a> 
      <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
    </tr>
    {{/each}}
  </tbody>
</table>

{{#if is_search}}
  {{#unless novedades.length}}
  No se encontraron resultados para "<b>{{q}}</b>"
  {{/unless}}
{{/if}}
</div>
