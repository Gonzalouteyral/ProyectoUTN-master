
<div class="container" style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 style="text-align:center; margin: 60px">Agregar nueva imagen</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
            <div class="form-group" style="margin: 10px ;">
                <input type="text" class="form-control" placeholder="Titulo" name="titulo">
            </div>
            <div class="form-group" style="margin: 10px ;">
               <label >Imagen: <input type="file" name="imagen" id="imagen" class="form-group">
                </label>
            </div>
            <button type="submit" class="btn btn-dark" style="margin: 10px;align-items: center;" >Guardar</button>
            </form>
        </div>
    </div>
</div>


{{#if error}}
<h5 style="text-align:center;">{{message}}</h5>
{{/if}}